package database;



import java.beans.XMLEncoder;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Properties;

import model.User;
import redis.clients.jedis.Jedis;

public class RedisDatabase {

	public static ArrayList<User> listOfUsers=new ArrayList<User>();
	public  static void main(String [] args)  throws Exception{
		for(int i=1;i<=8;i++)
		listOfUsers.add(new User("korisni"+i,"lozinka"+i,i));
		serializeWithXML(listOfUsers);
		System.out.println("serialized");
		try {
		Jedis jedis=new Jedis("localhost");
		
		
		}
		catch(Exception e) {
		e.printStackTrace();
		}
		
	}
	public static void serializeWithXML(ArrayList<User>listOfUsers) {
		
			XMLEncoder encoder;
			try {
				Properties prop=new Properties();
				File f=new File(prop.getProperty("XMLfileLocation"));
				if(!f.exists()) {
					f.createNewFile();
				}
				else {
					f.delete();
					f.createNewFile();
				}
				prop.load(new FileInputStream("resources"+File.separator+"config.properties"));
				encoder = new XMLEncoder(new FileOutputStream(f));
				encoder.writeObject(listOfUsers);
				encoder.close();
			
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
	}
}
